@model T1PJ.DataLayer.Model.Accounts.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
@Html.AntiForgeryToken()
<div class="row d-flex justify-content-center mt-lg-5">
    <div class="col-4">
        <h3 class="text-center">Register</h3>
        <hr />
        <form method="post" id="formRegister" class="needs-validation" asp-action="Register" asp-controller="Accounts">
            <!-- Email input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <input type="text" asp-for="UserName" class="form-control" required />
                <label class="form-label" asp-for="UserName">Username</label>
                <div class="invalid-feedback">
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <input type="password" asp-for="Password" class="form-control" required />
                <label class="form-label" asp-for="Password">Password</label>
                <div class="invalid-feedback">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            <!-- Confirm Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                <div class="invalid-feedback">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <!-- Submit button -->
            <button data-mdb-ripple-init type="submit" id="btnSubmit" class="btn btn-primary btn-block mb-4">Sign up</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Have you an account? <a asp-action="Login">Login</a></p>
                <p>or sign up with:</p>
                <button data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
                    <i class="fab fa-facebook-f"></i>
                </button>

                <button data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
                    <i class="fab fa-google"></i>
                </button>

                <button data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
                    <i class="fab fa-twitter"></i>
                </button>

                <button data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
                    <i class="fab fa-github"></i>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/register.js"></script>
}
